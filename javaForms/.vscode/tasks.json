{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "open-in-netbeans",
            "detail": "Open the project in NetBeans. Useful to edit the GUI.",
            "command": "netbeans",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "."
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "icon": {
                "id": "link-external",
                "color": "terminal.ansiYellow"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "group": "build-execution"
            }
        },
        {
            "label": "build",
            "detail": "Build the project using the ant command",
            "command": "ant",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "compile"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "icon": {
                "id": "tools",
                "color": "terminal.ansiYellow"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "group": "build-execution"
            }
        },
        {
            "label": "generate-jar",
            "detail": "Generate the .jar file using the ant command",
            "command": "ant",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "jar"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "icon": {
                "id": "tools",
                "color": "terminal.ansiYellow"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "group": "build-execution"
            }
        },
        {
            "label": "run-jar",
            "detail": "Run the .jar file using the java command",
            "command": "java",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "-cp",
                "libs/*:dist/__change__.jar",
                "__change__.Form1"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "icon": {
                "id": "run",
                "color": "terminal.ansiYellow"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "group": "build-execution"
            }
        },
        {
            "label": "run-debugger-local",
            "hide": true,
            "command": "java",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "isBackground": true,
            "args": [
                "-agentlib:jdwp=transport=dt_socket,server=y,address=0.0.0.0:${config:torizon_debug_port1},suspend=n",
                "-cp",
                "${workspaceFolder}/libs/*:${workspaceFolder}/dist/__change__.jar",
                "__change__.Form1"
            ],
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "line": 1,
                            "column": 1,
                            "message": 1
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": {
                            "regexp": "."
                        },
                        "endsPattern": {
                            "regexp": "."
                        }
                    }
                }
            ],
            "dependsOn": [
                "build",
                "generate-jar"
            ],
            "icon": {
                "id": "run",
                "color": "terminal.ansiYellow"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "group": "build-execution"
            }
        },
        {
            "label": "rsync-debug-dist",
            "detail": "",
            "hide": true,
            "command": "rsync",
            "type": "shell",
            "args": [
                "-av",
                "-e",
                "ssh -p ${config:torizon_debug_ssh_port} -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null",
                "${workspaceFolder}/dist/",
                "${config:torizon_run_as}@${config:torizon_ip}:${config:torizon_app_root}"
            ],
            "dependsOrder": "sequence",
            "icon": {
                "id": "sync",
                "color": "terminal.ansiYellow"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "group": "build-execution"
            }
        },
        {
            "label": "exterminate-debugger",
            "detail": "",
            "hide": true,
            "command": "ssh",
            "type": "process",
            "args": [
                "-p",
                "${config:torizon_debug_ssh_port}",
                "-o",
                "UserKnownHostsFile=/dev/null",
                "-o",
                "StrictHostKeyChecking=no",
                "${config:torizon_run_as}@${config:torizon_ip}",
                "pkill java"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile",
            "icon": {
                "id": "stop",
                "color": "terminal.ansiYellow"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "group": "build-execution"
            }
        },
