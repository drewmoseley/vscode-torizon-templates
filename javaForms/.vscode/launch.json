{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Run Local",
            "request": "attach",
            "hostName": "localhost",
            "port": "${config:torizon_debug_port1}",
            "preLaunchTask": "run-debugger-local"
        },
        {
            "type": "java",
            "name": "Torizon AMD64",
            "request": "attach",
            "hostName": "${config:torizon_ip}",
            "port": "${config:torizon_debug_port1}",
            "preLaunchTask": "deploy-torizon-amd64",
            "postDebugTask": "exterminate-debugger"
        },
        {
            "type": "java",
            "name": "Torizon ARMv8",
            "request": "attach",
            "hostName": "${config:torizon_ip}",
            "port": "${config:torizon_debug_port1}",
            "preLaunchTask": "deploy-torizon-arm64",
            "postDebugTask": "exterminate-debugger"
        }
    ]
}
