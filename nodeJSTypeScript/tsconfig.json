{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2021",
        "outDir": "lib",
        "declaration": true,
        "lib": [
            "ES2021",
            "DOM"
        ],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "noImplicitReturns": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "allowJs": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}
