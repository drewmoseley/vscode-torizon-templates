        {
            "label": "open-skia-gtk-csproj",
            "command": "echo",
            "type": "shell",
            "args": [
                "${command:o.pickProjectAndStart}"
            ],
            "problemMatcher": "$msCompile",
            "icon": {
                "id": "selection",
                "color": "terminal.ansiYellow"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "group": "build-execution"
            }
        },
        {
            "label": "build-and-reload-on-open",
            "hide": true,
            "command": "echo",
            "type": "shell",
            "args": [
                "âœ…"
            ],
            "problemMatcher": "$msCompile",
            "dependsOrder": "sequence",
            "dependsOn": [
                "open-skia-gtk-csproj",
                "build-debug-local",
                "reload-skia-gtk-csproj"
            ],
            "runOptions": {
                "runOn": "folderOpen"
            },
            "icon": {
                "id": "loading",
                "color": "terminal.ansiYellow"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
